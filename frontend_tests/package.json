{
  "name": "frontend-api-tests",
  "version": "1.0.0",
  "description": "Comprehensive frontend E2E tests for Property Management Software",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:all": "playwright test --reporter=html && node generate-report.js",
    "test:generate-report": "node generate-report.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}

