{
  "name": "rems-backend",
  "version": "1.0.0",
  "description": "REMS Backend Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "migrate:deploy": "prisma migrate deploy",
    "seed:coa": "npx tsx prisma/seeds/chart-of-accounts.ts && npx tsx prisma/seeds/chart-of-accounts-expanded.ts && npx tsx prisma/seeds/chart-of-accounts-comprehensive.ts",
    "seed:app": "npx tsx src/prisma/seed.ts",
    "seed:all": "npm run seed:coa && npm run seed:app",
    "prisma:seed": "npm run seed:all",
    "start:railway": "npm run migrate:deploy && npm run prisma:seed",
    "postinstall": "prisma generate",
    "railway:deploy": "npm run build && npm run start:railway",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=api",
    "test:api:coverage": "jest --testPathPattern=api --coverage",
    "test:auth": "jest auth.test.ts",
    "test:crm": "jest crm.test.ts",
    "test:properties": "jest properties.test.ts",
    "test:tenants": "jest tenants.test.ts",
    "test:schema-fixes": "jest --testPathPattern=schema-fixes.test.ts",
    "migrate": "tsx run-migration.ts",
    "migrate:data": "tsx src/scripts/migrate-property-unit-data.ts",
    "test:finance": "jest finance.test.ts",
    "test:employees": "jest employees.test.ts",
    "test:all": "tsx src/__tests__/run-all-tests.ts",
    "test:report": "tsx src/__tests__/run-all-tests.ts",
    "kill-port": "powershell -ExecutionPolicy Bypass -File scripts/kill-port.ps1 -Port 3001",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "apply-tid-migration": "tsx scripts/apply-tid-migration.ts",
    "fix-properties-error": "tsx scripts/fix-properties-error.ts",
    "check-migration": "tsx scripts/check-and-fix-migration.ts",
    "fix-missing-columns": "tsx scripts/fix-missing-columns.ts",
    "apply-deal-location-id-fix": "tsx scripts/apply-deal-location-id-fix.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.25",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.16.0",
    "axios": "^1.13.6",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.17.2",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.19.3",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "prisma": "^7.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}